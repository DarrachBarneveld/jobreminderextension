{
  "manifest_version": 3,
  "name": "Job Application Counter",
  "description": "Make sure you reach your daily job application goal!",
  "version": "1.0.0",
  "icons": {
    "16": "images/application.jpg",
    "32": "images/application.jpg",
    "48": "images/application.jpg",
    "128": "images/application.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/application.jpg"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LI Job Application Counter",
    "default_popup": "popup.html",
    "default_icon": "images/application.jpg"
  },
  "host_permissions": ["https://*.linkedin.com/*"],
  "permissions": ["notifications", "storage", "alarms", "tabs"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}
